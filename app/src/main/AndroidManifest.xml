    package="com.grt.partnerLicoreria">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.grt.partnerLicoreria.common.PartnerLicoreriaApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PartnerLicoreria">
        <activity
            android:name="com.grt.partnerLicoreria.ui.splash.SplashImageActivity"
            android:exported="true"
            android:theme="@style/Theme.PartnerLicoreria.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.grt.partnerLicoreria.ui.main.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.PartnerLicoreria.NoActionBar">
